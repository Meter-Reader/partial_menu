<li <%= 'class="active"' if current_menu?(item.uri)%>>
  <% if item.try(:icon).present? %>
    <i class="fa fa-fw <%= item.icon %>"></i>
  <% end %>
  <% if item.uri.present? %>
    <%= link_to item.uri do -%>
      <%= item.title %>
    <% end -%>
  <% else %>
    <%= item.title %>
  <% end -%>
</li>