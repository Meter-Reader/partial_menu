<ul>
  <% menu.items.each do |item| -%>
    <% if item.submenu? -%>
      <%= render "#{menu.layout}_menu/submenu", menu: item.submenu -%>
    <% elsif item.separator?%>
      <%= render "#{menu.layout}_menu/separator", item: item -%>
    <% else -%>
      <%= render "#{menu.layout}_menu/item", item: item -%>
    <% end -%>
  <% end -%>
</ul>